<h1>New Bet</h1>

<%= form_for(@bet) do |f| %>
  <div class="field">
    <%= f.label :opponent %><br />
    <%= f.text_field :opponent %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.hidden_field :creator, :value => @user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
